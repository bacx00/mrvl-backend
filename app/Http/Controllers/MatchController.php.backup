            $liveData['resume_time'] = now()->toISOString();

            DB::table('matches')->where('id', $matchId)->update([
                'live_data' => json_encode($liveData),
                'updated_at' => now()
            ]);

            // Broadcast resume event
            event(new \App\Events\MatchResumed($matchId));

            return response()->json([
                'success' => true,
